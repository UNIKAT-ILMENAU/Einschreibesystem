<!DOCTYPE html>
<html ng-app="mainApp">
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <script src="{{ asset('vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('vendor/angular/angular.min.js') }}"></script>
    <script src="{{ asset('vendor/angular-route/angular-route.min.js') }}"></script>

    <script src="{{ asset('vendor/angular-resource/angular-resource.min.js') }}"></script>
    <script src="{{ asset('vendor/angular-touch/angular-touch.min.js') }}"></script>
    <script src="{{ asset('vendor/angular-translate/angular-translate.min.js') }}"></script>
    <script src="{{ asset('vendor/angular-translate-loader-static-files/angular-translate-loader-static-files.min.js') }}"></script>

    <link href="{{ asset('vendor/bootstrap/dist/css/bootstrap.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('resources/styles/main.css') }}" rel="stylesheet" type="text/css"/>

    <script src="{{ asset('vendor/angular-animate/angular-animate.min.js') }}"></script>
    <script src="{{ asset('vendor/angular-strap/dist/angular-strap.min.js') }}"></script>
    <script src="{{ asset('vendor/angular-strap/dist/angular-strap.tpl.min.js') }}"></script>
    <script src="{{ asset('vendor/angular-ui-router/release/angular-ui-router.min.js') }}"></script>
    <script src="{{ asset('vendor/angular-jwt/dist/angular-jwt.min.js') }}"></script>
    <script src="{{ asset('vendor/a0-angular-storage/dist/angular-storage.min.js') }}"></script>

    <link rel='stylesheet' href="{{ asset('vendor/textAngular/dist/textAngular.css') }}">
    <script src="{{ asset('vendor/textAngular/dist/textAngular-rangy.min.js') }}"></script>
    <script src='{{ asset('vendor/textAngular/dist/textAngular-sanitize.min.js') }}'></script>
    <script src='{{ asset('vendor/textAngular/dist/textAngular.min.js') }}'></script>
    <link rel="stylesheet" href="{{ asset('vendor/font-awesome/css/font-awesome.min.css') }}"/>

    <script src="{{ asset('components/dist/app.min.js') }}"></script>
    <script src="{{ asset('components/dist/ctrl.min.js') }}"></script>
    <script src="{{ asset('components/dist/srvcs.min.js') }}"></script>


    <style>
        .nav, .pagination, .carousel, .panel-title a {
            cursor: pointer;
        }
    </style>
</head>
<body ng-controller="GlobalCtrl">

<nav class="navbar navbar-default">
    <div class="container-fluid">

        <ul class="nav navbar-nav navbar-left">
            <img ng-click="back()" alt="Titel" src="resources/images/logo.svg" width="100">
        </ul>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <button type="button" class="btn btn-default navbar-btn btn-sm" ng-model="selectedLang"
                            data-html="1" data-toggle="true" bs-options="lang.name for lang in langs"
                            ng-change="changeLang()" bs-select>
                        <span class="caret"></span>
                    </button>
                </li>
                <li ng-show="show_login"><a href="#login">
                        <button translate type="button" class="btn btn-link navbar-link">BUTTON_ADMINISTRATOR_LOGIN</button>
                    </a></li>
                <li ng-show="show_logout">
                    <button type="button" class="btn btn-default navbar-btn btn-sm" ng-click="logout()">Logout</button>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div ui-view=""></div>

<footer class="footer">
    <div class="container text-center">
        <a ui-sref="legalnotice">
            <button translate type="button" class="btn btn-link">LEGAL_NOTICE</button>
        </a>
        <a ui-sref="contact">
            <button translate type="button" class="btn btn-link">CONTACT</button>
        </a>
    </div>
</footer>


</body>
</html>
